@model SRM_MVC.Models.Result

@{
    ViewData["Title"] = "AddResult";
    Layout = "~/Views/Shared/AdminDashBoard.cshtml";
}

<h1>Add Result</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddResult">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ResultId" class="control-label"></label>
                <input asp-for="ResultId" class="form-control" />
                <span asp-validation-for="ResultId" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.StId, "Student ID ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(x => Model.StId, new SelectList(ViewBag.studentList, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "Country" })
                    @Html.ValidationMessageFor(model => model.StId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.SemesterId, "Semester ID ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(x => Model.SemesterId, new SelectList(ViewBag.semlist, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "Country" })
                    @Html.ValidationMessageFor(model => model.SemesterId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.SubId, "Subject ID ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(x => Model.SubId, new SelectList(ViewBag.SubjectList, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "Country" })
                    @Html.ValidationMessageFor(model => model.SubId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ResultScore" class="control-label"></label>
                <input asp-for="ResultScore" class="form-control" />
                <span asp-validation-for="ResultScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResultStatus" class="control-label"></label>
                <input asp-for="ResultStatus" class="form-control" />
                <span asp-validation-for="ResultStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Result" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

